{
    "compilerOptions": {
        // Optional chaining moment :/
        // https://github.com/webpack/webpack/issues/10227
        "target": "es2022",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "jsx": "react-jsx",
        "lib": [
            "ESNext",
            "ESNext.Array",
            "DOM"
        ]
    },
    "include": ["src/**/*"],
    "files": [
        "src/global/global.d.ts",
    ]
}
