{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "jsx": "react-jsx",
        "lib": [
            "ESNext.Array",
            "DOM"
        ]
    },
    "include": ["src/**/*"],
    "files": [
        "src/main.d.ts"
    ]
}
